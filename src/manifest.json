{
  "manifest_version": 2,
  "name": "Retabber",
  "description": "Minimizes duplicate tabs",
  "version": "1.0.0",
  "options_page": "options.html",
  "browser_action": {
    "default_action": "icon.png"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ]
}
